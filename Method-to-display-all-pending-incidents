// Method to display all pending incidents sorted by urgency level
public void displayAllIncidents() {
    if (isEmpty()) {
        System.out.println("No pending incidents.");
        return;
    }
    System.out.println("Pending incidents (sorted by urgency level):");
    PQNode current = head;
    while (current != null) {
        System.out.println("Incident: " + current.value + ", Urgency Level: " + current.key);
        current = current.next;
    }
}
